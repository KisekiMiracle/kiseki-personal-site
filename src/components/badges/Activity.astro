---
import { Icon } from "astro-icon/components";

const { icon, date, title, content } = Astro.props;
---

<div class="flex gap-4 min-w-64">
  <Icon name={icon} class="justify-start mt-1 h-fit text-blue-700 scale-700" />
  <div class="flex flex-col gap-1">
    <small class="font-semibold text-neutral-400">{date}</small>
    <h3 class="font-bold text-xl">{title}</h3>
    <span class="text-[16px]">{content}</span>
  </div>
</div>