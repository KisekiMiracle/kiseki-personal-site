---
// @ts-nocheck
/** biome-ignore-all lint/correctness/noUnusedImports: <-> */
/** biome-ignore-all assist/source/organizeImports: <-> */

import StashCircleDot from "~icons/stash/circle-dot";

const { date, title, content } = Astro.props;
---

<div class="gap-2 grid min-w-64" style="grid-template-columns: auto 1fr;">
  <StashCircleDot class="justify-start mt-1 w-[48px] h-[48px] text-blue-700" />
  <div class="flex flex-col gap-1">
    <small class="font-semibold text-neutral-400">{date}</small>
    <h3 class="font-bold text-xl">{title}</h3>
    <span class="text-[16px]">{content}</span>
  </div>
</div>
