---
/** biome-ignore-all lint/correctness/noUnusedImports: <-> */
/** biome-ignore-all assist/source/organizeImports: <-> */

import Cover from "../components/section/Cover.astro";
import BaseHead from "../components/BaseHead.astro";
import Sidemenu from "../components/navigation/Sidemenu.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { ClientRouter, fade, slide } from "astro:transitions";
import Footer from "../components/section/Footer.astro";

// biome-ignore lint/correctness/noUnusedVariables: <->
const { title, coverSrc, coverPosition } = Astro.props;

export const prerender = false;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={SITE_DESCRIPTION} />
    <ClientRouter />
  </head>
  <body class="relative bg-neutral-100/60">
    <main class="flex justify-center gap-8 py-6 text-neutral-800">
      <aside class="flex flex-col gap-6">
        <Sidemenu />
      </aside>
      <section class="flex flex-col gap-8">
        <slot name="extraContent" />
        <div
          class="flex flex-col gap-12 bg-white shadow-lg shadow-neutral-200 pb-8 rounded-2xl max-w-4xl overflow-hidden"
        >
          <Cover imgSource={coverSrc} position={coverPosition} />
          <article class="flex flex-col gap-4 px-14">
            <slot />
          </article>
        </div>
        <Footer />
      </section>
      <script>
        document.addEventListener("astro:page-load", () => {
          // This runs on first page load and after every navigation.
          // @ts-expect-error <->
          feather.replace();
        });
      </script>
    </main><!-- <Footer /> -->
  </body>
</html>
